REDHAT.ROOT = $(CURDIR)/../../

-include $(ROCKSROOT)/etc/Rules.mk
include Rules.mk
include $(SDSCDEVEL)/Pull.mk
include $(SDSCDEVEL)/Rules.mk

$(NAME).spec: DESCRIPTION LICENSE

MODULE_LOAD_MAGMA_CUDA = $(call MODULE_LOAD_PACKAGE, $(CUDAVERSION), CUDAHOME)
DESCRIBE_MAGMA_CUDA = echo built with cuda $(call GET_MODULE_VERSION, $(CUDAVERSION))


COMPILERTYPE=gf
COMPILERNAMETYPE=gnu
OPENMPFLAG=-fopenmp
INTELCOMPILERFLAGS=
ifeq ("$(COMPILERNAME)", "intel")
  COMPILETYPE = intel 
  COMPILERNAMETYPE = intel
  OPENMPFLAG = -fopenmp
  INTELCOMPILERFLAGS = -L$${MKLROOT}/../compiler/lib/intel64 -liomp5
endif

OPENMPFLAG=-fopenmp
ifeq ("$(COMPILERNAME)", "pgi")
  OPENMPFLAG = -mp
endif

DESCRIPTION:
	$(MODULE_LOAD_CC); \
	( \
	  $(DESCRIBE_PKG); \
	  $(DESCRIBE_CC); \
	  $(DESCRIBE_MAGMA_CUDA); \
          $(DESCRIBE_MKL) \
	) > $@

LICENSE: $(SRC_DIRS)
	$(CHECK_LICENSE_FILES)
	echo GPL > $@

build: $(SRC_DIRS)
	@echo "::: Package $(NAME) build complete :::"
	
install::
	mkdir -p $(ROOT)/$(PKGROOT)/example
	patch $(SOURCE_DIR)/example/Makefile patch-files/Makefile.patch
	perl -pi -e "s!MAGMAROOT!$(PKGROOT)!g" $(SOURCE_DIR)/example/Makefile
	perl -pi -e "s!COMPILERTYPE!$(COMPILERTYPE)!g" $(SOURCE_DIR)/example/Makefile
	perl -pi -e "s!COMPILERNAME!$(COMPILERNAMETYPE)!g" $(SOURCE_DIR)/example/Makefile
	perl -pi -e "s!OPENMPFLAG!$(OPENMPFLAG)!g" $(SOURCE_DIR)/example/Makefile
	$(PKGROOT_BIND_MOUNT)
	( \
	  $(MODULE_LOAD_CC); \
          $(MODULE_LOAD_MAGMA_CUDA); \
          $(MODULE_LOAD_MKL); \
          perl -pi -e "s!INTELCOMPILERFLAGS!$(INTELCOMPILERFLAGS)!g" $(SOURCE_DIR)/example/Makefile; \
          export CC=$(CC); \
          export CXX=$(CXX); \
          export FC=$(FC); \
          export CUDADIR=$${CUDAHOME}; \
          cp make.inc.$(COMPILERNAME) $(SOURCE_DIR)/make.inc; \
          cd $(SOURCE_DIR); \
          make install prefix=$(PKGROOT); \
          cd example; \
          if test "$(COMPILERNAME)" = "pgi"; then \
             export CC=pgc++; \
          fi; \
          make c; \
          cp * $(PKGROOT)/example \
        )
	$(PKGROOT_BIND_UMOUNT)
	$(INSTALL_LICENSE_FILES)
	@echo "::: Package $(NAME) install complete :::"

clean::
	rm -rf $(SOURCE_DIR) DESCRIPTION LICENSE
